
<%= form_for [:admin, @offer] do |f| %>
<%= render 'admin/shared/error_messages', object: f.object %>

  <%= f.label :title %><br />
  <%= f.text_field :title %><br /><br />

  <%= f.label :price %><br />
  <%= f.text_field :price %><br />

  <%= f.label :initial_price %><br />
  <%= f.text_field :initial_price %><br />

  <%= f.label "Ξεκινά στις:" %><br />
  <%= date_select :offer, :starts_at %>

  <%= f.label "Λήγει στις:" %><br />
  <%= date_select :offer, :expires_at %>

  <%= f.submit "Create" %>
<% end %>