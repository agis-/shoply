<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">

  <li <%= raw 'class="active"' unless params[:c] %>>
    <%= link_to "Όλα τα προϊόντα", @city %>
  </li>

  <% city_categories.each do |category| %>
  <li <%= raw 'class="active"' if active_category?(category) %>>
