<!DOCTYPE html>
<html>
<head>
  <title>admin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="navbar">
  <div class="container">
    <div id="logo"></div>
    <ul class="nav">
      <% if logged_in? %>
      <%= link_to "Logout", admin_logout_path %>
      <% else %>
      <%= link_to "Login", admin_login_path %>
      <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>

  <%= "Current user: " + current_user.name if logged_in? %>
  <%= yield %>
  <%= debug(params) %>
  <%= debug(session) %>
</div>


</body>
</html>
