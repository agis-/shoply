<!DOCTYPE html>
<html>
<head>
  <title><%= content_for :title %> : deals.gr</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<%= render 'shared/navbar' %>

<div class="container">
  <%= render 'shared/welcome_alert' if new_visitor? %>

  <div class="row-fluid">
    <div class="span2 sidebar">
      <%= render content_for :sidebar %>
    </div>

    <div class="span10">
      <%= yield %>
    </div>
  </div>
</div>

<%= debug(session) %>
<%= debug(params) %>
<%= debug(cookies) %>

</body>
</html>
