<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> - Shoply</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/navbar' %>

<div class="container container-main">
  <div class="row-fluid">
    <div class="span2 sidebar">
      <%= render content_for :sidebar %>
    </div>

    <div class="span10">
      <%= yield %>
    </div>
  </div>

  <%= render 'shared/vendors_bar' if controller_name == 'cities' %>

<div class="row-fluid" id="footer">
  <hr />
  <div class="span5">

  </div>

  <div class="span6">

  </div>
</div>


</div>


<% if Rails.env.development? %>
Session:
<p><%= debug(session) %></p>

Params:
<p><%= debug(params) %></p>

Cookies:
<p><%= debug(cookies) %></p>
<% end %>


</body>
</html>
