<% title @offer.title + " / " + @offer.vendor.name %>
<% provide :sidebar, 'more_from_vendor' %>

<div class="row-fluid">
  <div class="span12 offer-title">
    <h1><%= @offer.title %></h1>
    <h2 class="vendor">από <%= @offer.vendor.name %></h2>
  </div>
</div>

<div class="row-fluid">

  <div class="span5" id="offer-img">
    <%= image_tag @offer.image.url :normal %>
  </div>

  <div class="span7">
    <div class="row-fluid">
      <div class="span6" id="offer-price">
        <div class="inner">
          <span class="price"><%= format_price(@offer.price) %></span>
          <span class="initial-price">από <%= format_price(@offer.initial_price) %></span>
        </div>
      </div>

      <div class="span6" id="offer-info">
        offer.
      </div>
    </div>
  </div>

</div>

<div class="row-fluid">
  <div class="span12">
    share this
  </div>
</div>