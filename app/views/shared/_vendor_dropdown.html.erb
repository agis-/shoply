<li class="dropdown active vendor" id="menu1">
  <a class="dropdown-toggle" data-toggle="dropdown" >
    <%= current_vendor_name %>
    <b class="caret"></b>
  </a>

  <ul class="dropdown-menu">
    <% if (params[:controller] == 'vendors' || params[:controller] == 'offers') && stored_city? %>
    <li><%= link_to "Όλα τα Supermarkets", city_path(current_city) %></li>
     <li class="divider"></li>
    <% end %>
    <% all_vendors.each do |vendor| %>
      <% unless vendor.name == current_vendor_name %>
        <li><%= link_to vendor.name, vendor %></li>
      <% end %>
    <% end %>
  </ul>
</li>