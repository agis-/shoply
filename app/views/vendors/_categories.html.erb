<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">

  <li <%= raw 'class="active"' unless params[:c] %>>
    <%= link_to "Όλες οι κατηγορίες", @vendor %>
  </li>

  <% vendor_categories.each do |category| %>
